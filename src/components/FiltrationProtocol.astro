---
import { categories, type FilterCategory } from '../content/categories';
---

<!-- FILTRATION PROTOCOL -->
<div class="filtration-protocol">
  <div class="filter-text">
    <span>
      Filtrování
      <span class="product-count-indicator" title="Počet produktů">
        (0)
      </span>
    </span>
    <div class="filter-reset" title="Resetovat Filtry">
      <a href="/nabidka" aria-label="Anulace filtrů">
        <div class="reset-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 24 24">
            <path fill="currentColor" d="M22 12c0 5.523-4.477 10-10 10S2 17.523 2 12S6.477 2 12 2v2a8 8 0 1 0 5.135 1.865L15 8V2h6l-2.447 2.447A9.98 9.98 0 0 1 22 12" />
          </svg>
        </div>
      </a>
    </div>
  </div>

  <!-- PRICE FILTERS -->
  <div class="filter-container">
    <div class="filter-price">
      <span class="filter-label">
        Cena
      </span>
      <article class="price-range">
        <input placeholder="Od" id="od" class="__text-input price-from" type="number" name="od" />
        <span class="price-range-separator">
          -
        </span>
        <input placeholder="Do" id="do" class="__text-input price-to" type="number" name="do" />
      </article>
    </div>

    <!-- CATEGORY FILTERS -->
    <div class="filter-by-category">
      <span class="filter-label">Kategorie</span>
      {categories.map((category: FilterCategory) => (
        <div class="filter-body">
          <button type="button" class="__button collapse-button">
            {category.categoryName}
          </button>
          <div class="collapse-body">
            {category.options.map(option => (
              <label class="checkbox-label">
                <input class="__checkbox" type="checkbox" />
                <span>
                  {option.label}
                </span>
              </label>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</div>