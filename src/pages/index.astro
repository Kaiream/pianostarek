                </svg>
              </div>
            </aside>
          </a>
        </div>
        <div class="cover-images">
          <a href="sluzby.html" class="cover-link">
            <Image
            src={sluzby}
            alt="Obrázek služeb"
            class="__image cover-image"
            width={2048}
            height={1396}
            quality={80}
            format="webp"
            />
            <div class="cover-hidden-text">
              <span class="cover-text">
                Služby
              </span>
            </div>
          </a>
          <a href="showroom.html" class="cover-link">
            <Image
            src={showroom}
            alt="Obrázek našeho showroomu v Praze"
            class="__image cover-image"
            width={1317}
            height={640}
            quality={80}
            format="webp"
            />
            <div class="cover-hidden-text">
              <span class="cover-text">
                Showroom
              </span>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- BRANDS -->
    <section class="section-brands">
      <div class="brand-container">
        <h2 class="heading-2">Naše značky</h2>
        <hr class="__separator separator-heading" />
        <div class="logo-set">
          {brands.map((brand: BrandLogo) => (
            <a href="/nabidka" class="brand-logo-link">
              <Image
                src={brand.src}
                alt={brand.alt}
                class="__image brand-image"
                width={brand.width}
                height={brand.height}
                quality={80}
                format="webp"
                loading="lazy"
              />
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  
</MainLayout>